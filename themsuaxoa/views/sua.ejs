<% include template/header %>
      <div class="container">
          <div class="jumbotron text-center">
              <h1 class="display-3"><%= title %> </h1>
              <p class="lead">Trong mongodb </p>
              <hr class="my-2">
               
          </div>
      
       <% data.forEach(function (mot){ %>
    <form action="/sua/<%= mot._id  %>" method="post">
        
        <div class="form-group">
          <label for="ten">Tên </label>
          <input type="text"
            class="form-control" name="ten" id="" aria-describedby="helpId" placeholder="" value="<%= mot.ten %>">
          <small id="helpId" class="form-text text-muted">Tên </small>
        </div>    
        <div class="form-group">
          <label for="dt">Dien thoai</label>
          <input type="text" class="form-control" name="dt" id="" aria-describedby="helpId" placeholder="" value="<%= mot.dienthoai %>">
          <small id="helpId" class="form-text text-muted">Điện thoại </small>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
    <% }) %>
</div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
  </body>
</html>
      <% danhsach.forEach(function(id){ %>
         <% duLieuJson.sanpham.forEach(function(motsanpham){ 
             if(motsanpham.id == id ){
                 //nếu trang đang kích vào sẽ không hiện sản phẩm trong Sản phẩm đã xem, kích qua sản phẩm khác nó mới hiển thị

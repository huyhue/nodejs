<% include template/header %>

<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-3">Xem dữ liệu </h1>
        <p class="lead">Vào mongodb </p>
        <hr class="my-2">

    </div>

    <table class="table table-striped table-hover table-inverse table-bordered table-inverse  ">
        <thead class="thead-inverse">
            <tr>
                <th> Tên</th>
                <th> Tuổi </th>
                <th> Action </th>
            </tr>
        </thead>
        <tbody>

            <% data.forEach(function(motphantu){ %>
            <tr>
                <td scope="row"> <%= motphantu.ten %></td>
                <td> <%= motphantu.tuoi %></td>
                <td>
                    <a href="/sua/<%= motphantu.id %>">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </a>
                    <a onclick="return xoahaykhong('Bạn có chắc chắn xoá không') ; " href="/xoa/<%= motphantu.id  %>" <i
                        class="fa fa-remove" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

</div>


